{
  "name": "number-string",
  "version": "1.1.2",
  "description": "Functions to format number to string",
  "main": "dist/app.js",
  "author": "Tony Brix <Tony@Brix.ninja>",
  "scripts": {
    "build": "npm run clean && mkdir dist && babel src/app.js -o dist/app.js",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "clean": "rimraf dist",
    "commit": "npm run clean && git add . && git-cz",
    "push": "git push origin master",
    "release": "npm run commit && npm run push",
    "test": "npm run build && istanbul cover node_modules/mocha/bin/_mocha -- -R spec test/es5.app.js && npm run clean",
    "test:watch": "mocha test/es6.app.js -w --compilers js:babel-core/register",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UziTech/number-string.git"
  },
  "keywords": [
    "number",
    "string",
    "tostring",
    "format"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UziTech/number-string/issues"
  },
  "homepage": "https://github.com/UziTech/number-string#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "assert": "^1.4.1",
    "codecov": "^3.2.0",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.4",
    "istanbul": "^0.4.5",
    "mocha": "^6.0.0",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.3"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm test && npm run check-coverage"
    }
  }
}
