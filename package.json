{
  "name": "number-string",
  "version": "1.1.3",
  "description": "Functions to format number to string",
  "main": "dist/app.js",
  "module": "src/app.js",
  "author": "Tony Brix <Tony@Brix.ninja>",
  "scripts": {
    "build": "npm run clean && mkdir dist && babel src/app.js -o dist/app.js",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "test": "npm run build && istanbul cover node_modules/mocha/bin/_mocha -- -R spec test/es5.app.js && npm run clean",
    "test:watch": "mocha test/es6.app.js -w --require @babel/register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UziTech/number-string.git"
  },
  "keywords": [
    "number",
    "string",
    "tostring",
    "format"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UziTech/number-string/issues"
  },
  "homepage": "https://github.com/UziTech/number-string#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "assert": "^2.0.0",
    "eslint": "^7.5.0",
    "husky": "4.2.5",
    "istanbul": "^0.4.5",
    "mocha": "^8.0.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test && npm run check-coverage",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
